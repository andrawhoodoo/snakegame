class Snake {
  constructor() {
    this.currentPos_ = 0;
    this.currentDir_ = "forward";
  }
  turn() {
    if (this.currentDir_ == "forward") {
      this.currentDir_ = "backward"
    }
    else {
      this.currentDir_ = "forward"
    }
  }
  move(x) {
    if (this.currentDir_ == "forward") {      
      this.currentPos_ = this.currentPos_ + x;
    }

    else {
      this.currentPos_ = this.currentPos_ - x;
    }
  }
}

let bigSnake = new Snake();
let littleSnake = new Snake();

bigSnake.move(7);
bigSnake.turn();
bigSnake.move(5);
console.log("Big Snake is at position", bigSnake.position);

littleSnake.turn();
littleSnake.move(1);
littleSnake.move(3);
littleSnake.turn();
littleSnake.move(4);
console.log("Little Snake is at position", littleSnake.position)
