class Point {
  constructor(x, y) {
    this.x_ = x;
    this.y_ = y;
  }
  get posX() {
    return this.x_;
  }
  get posY() {
    return this.y_;
  }
}

class Snake {
  constructor() {
    this.pos_ = new Point(0, 0);
    this.currentDir_ = "forward";
  }
  turnLeft() {
    if (this.currentDir_ === "forward") {
      this.currentDir_ = "up";
    }
    else if(this.currentDir_ === "up") {
      this.currentDir_ = "backward";
    }
    else if(this.currentDir_ === "backward") {
      this.currentDir_ = "down";
    }
    else if(this.currentDir_ === "down") {
      this.currentDir_ = "forward";
    }
  }
  turnRight() {
    if (this.currentDir_ === "forward") {
      this.currentDir_ = "down";
    }
    else if(this.currentDir_ === "up") {
      this.currentDir_ = "forward";
    }
    else if(this.currentDir_ === "backward") {
      this.currentDir_ = "up";
    }
    else if(this.currentDir_ === "down") {
      this.currentDir_ = "backward";
    }
  }

  move(steps) {
    if (this.currentDir_ === "forward") {      
      this.pos_ = new Point(this.position.posX + steps, this.position.posY);
    }

    else if(this.currentDir_ === "backward") {
      this.pos_ = new Point(this.position.posX - steps, this.position.posY);
    }
    else if(this.currentDir_ === "up") {
      this.pos_ = new Point(this.position.posX, this.position.posY + steps);
    }
    else if(this.currentDir_ === "down") {
      this.pos_ = new Point(this.position.posX, this.position.posY - steps);
    }
  }
  get position() {
    return this.pos_;
  }
}

class WorldModel {
  constructor() {
    this.snake = new Snake();
  }
  update(steps) {
    this.snake.move(steps);
  }
}

